roar "=== Block-Style Loops Demo ==="
roar ""

murmur Countdown (Block Loop)
count2 bind 5
flag bind 0
sniff count2 >= 0 :
{
	sniff flag == 1 : dive
	sniff count2 >= 0 : flag bind 1
	sniff flag == 1 : roar "[BLOCK] T-minus " + count2
	sniff flag == 1 : count2 bind count2 - 1
	sniff count2 >= 0 : flag bind 0
	sniff flag == 0 : soar
}
roar "[BLOCK] LIFTOFF!"
roar ""
